<UserControl x:Class="MRB.LanguageLearning.Controls.VocabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="475">
    <Grid>
        <Label x:Name="ForeignVocabLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" Width="233" FontSize="20" Margin="10,60,232,157" Height="53"/>
        <TextBox x:Name="GuessKnownVocabTextBox" HorizontalAlignment="Left" Height="36" Margin="10,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233" FontSize="20" KeyUp="GuessForeignVocabTextBox_KeyUp"/>
        <Button x:Name="NewVocabButton" Content="New Vocab" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" Width="75" Click="NewVocabButton_Click"/>
        <Button x:Name="VerifyVocabButton" Content="Verify" HorizontalAlignment="Left" Margin="390,236,0,0" VerticalAlignment="Top" Width="75" Click="VerifyVocabButton_Click"/>
        <Label x:Name="ScoreLabel" Content="Score:" HorizontalAlignment="Left" Margin="338,10,0,0" VerticalAlignment="Top" Width="47"/>
        <Button x:Name="ResetScoreButton" Content="Reset" HorizontalAlignment="Left" Margin="390,41,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.467,-0.364" Click="ResetScoreButton_Click"/>
        <Label x:Name="ScoreValueLabel" Content="" HorizontalAlignment="Left" Margin="390,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.868,0" Width="75"/>
        <Label x:Name="StudyGroupLabel" Content="Study Group" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="StudyGroupComboBox" HorizontalAlignment="Left" Margin="90,14,0,0" VerticalAlignment="Top" Width="153" SelectionChanged="StudyGroupComboBox_SelectionChanged" />
        <Label x:Name="CorrectKnownVocabLabel" Content="" Foreground="Blue" HorizontalAlignment="Center" VerticalAlignment="Center" Width="233" FontSize="20" Margin="10,159,232,58" Height="53"/>
    </Grid>
</UserControl>
